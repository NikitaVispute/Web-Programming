<% include partials/header %>
<% if(user && user.type === "admin") { %>
<div class="jumbotron">
    <h3 class="display-4">Welcome back Admin</h3>
    <a class="btn btn-info" href="items/new" role="button">Add a new item</a>
</div>
<% } %>
    <div class="container">
            <div class="row">
            <% items.forEach(function(item) { %>
                <div class="col-md-4 col-sm-6 thumb-container">
                    <!-- <a href="items/<%= item._id %>"><img class="img-thumbnail" style="height:200px; width:200px;" src="/images/<%= item.image %>"/></a><br>
                    <div class="caption"><a class="caption-title"href="items/<%= item._id %>"><%= item.title %></a></div> -->
                    <div class="card" style="width: 200px">
                            <a href="items/<%= item._id %>"><img src="/images/<%= item.image %>" class="card-img-top"></a>
                            <div class="card-body">
                                <a class="caption-title " href="items/<%= item._id %>"><p class="card-text"><%= item.title %></p></a>
                            </div>
                    </div>
                </div>
            <%}); %>
        </div>
        <% if (pages > 0) { %>
            <ul class="pagination text-center">
                <% if (current == 1) { %>
                    <li class="disabled page-item"><a class="page-link" >First</a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/?page=1">First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled page-item"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="active page-item"><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="disabled page-item"><a class="page-link" >...</a></li>
                    <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="disabled page-item"><a class="page-link">Last</a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/?page=<%= pages %>">Last</a></li>
                <% } %>
            </ul>
        <% } %>
    </div>
<% include partials/footer %>
