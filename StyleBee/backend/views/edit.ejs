<% include partials/header %>

<div class="container">

    <h1> Edit Item</h1>
    <form action="/items/<%= item._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" placeholder="Image" type="text" name="image" value=<%= item.image %>>
        </div>
        <div class="form-group">
                <input class="form-control" placeholder="age" type="text" name="age_group" value=<%= item.age_group %>>
            </div>
        <div class="form-group">
                <input class="form-control" placeholder="Gender" type="text" name="gender" value=<%= item.gender %>>
            </div>
        <div class="form-group">
            <input class="form-control" placeholder="Title" type="text" name="title" value=<%= item.title %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Price Discount" name="price_discount" value=<%= item.price.discount %>>
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Description" name="description"><%= item.description %></textarea>
        </div>

        <div class="form-group">
            <input class="form-control" type="text" placeholder="Price Currency (USD)" name="price_currency" value=<%= item.price.currency %>>
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Price Value" name="price_value" value=<%= item.price.value %>>
        </div>

        <div class="form-group">
            <input class="form-control" type="text" placeholder="Campaign Name" name="price_campaign" value=<%= item.price.campaign %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Size type" name="details_size" value=<%= item.details.sizes %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Item Color" name="details_color" value=<%= item.details.color %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Item Style" name="details_style" value=<%= item.details.style %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Care Instructions" name="details_care_instructions" value=<%= item.details.care_instructions %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Composition" name="details_composition" value=<%= item.details.composition %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Type" name="details_type" value=<%= item.details.type %>>
        </div>
        <button class="btn btn-primary" type="submit"> Save</button>
    </form>
    <a href="/"> Cancel</a>
</div>
<% include partials/footer %>