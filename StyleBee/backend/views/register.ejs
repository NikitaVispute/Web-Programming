<% include partials/external_header %>
<div class="bg">
    <% if(error.message) { %>
    <div class="alert alert-warning" role="alert">
        <%= error.message %>
    </div>
    <% } %>
    <div class="container">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card login-form shadow">
              
              <img width="100" height="100" src="../images/logo_big.png" alt="StyleBee" class="center">
              <p class="logo-text center">StyleBee</p>
              <h5 class="center">Register</h1>
    
              <form action="/register" method="POST" class = "col-xs-8 text-center login-form-content">
              
                <div class="form-group">
                  <input type="email" name="username" class="form-control" placeholder="Enter email" require>
                </div>
                
                <div class="form-group">
                  <input type="password" name="password" class="form-control" minlength=8 title="8 characters minimum for password" placeholder="Password" required>
                </div>
                <p>Have an account ? <a href="/login"> <span>Login</span></a></p>
                
                <button type="submit" class="btn btn-primary sb-button ">Register</button>
              </form>
            </div>
          </div>
        </div>
      </div>
</div>

<% include partials/external_footer %>